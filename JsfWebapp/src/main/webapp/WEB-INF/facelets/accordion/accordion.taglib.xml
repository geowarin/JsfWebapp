	</tag>
	<tag>
		<tag-name>accordionHandler</tag-name>
		<handler-class>com.aziphael.webapp.components.accordion.AccordionHandler</handler-class>
	</tag>
	<tag>
		<tag-name>uiAccordion</tag-name>
		<component>
			<component-type>com.aziphael.jsf.accordion.Accordion</component-type>
		</component>
	</tag>
	
	<tag>
		<tag-name>uiAccordionTab</tag-name>
		<component>
			<component-type>com.aziphael.jsf.accordion.AccordionTab</component-type>
		</component>
	</tag>
	<tag>
		<tag-name>accordionTab</tag-name>
		<source>accordionTab.xhtml</source>
	</tag>
	<tag>
		<tag-name>accordionTabHandler</tag-name>
		<handler-class>com.aziphael.webapp.components.accordion.AccordionTabHandler</handler-class>
	</tag>
	
	<tag>
		<tag-name>accordionAction</tag-name>
		<handler-class>com.aziphael.webapp.components.accordion.AccordionTabHandler</handler-class>
	</tag>


